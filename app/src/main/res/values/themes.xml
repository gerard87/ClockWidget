<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClockWidget" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="widget">
        <item name="android:textSize">@dimen/default_font_size</item>
    </style>

    <style name="widget.google_sans" parent="widget">
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="widget.open_sans" parent="widget">
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="widget.montserrat" parent="widget">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="widget.shadow" parent="widget">
        <item name="android:shadowColor">@color/widget_shadow_color</item>
        <item name="android:shadowDy">@dimen/widget_shadow_dy</item>
        <item name="android:shadowRadius">@dimen/widget_shadow_radius</item>
    </style>

    <style name="widget.shadow.google_sans" parent="widget.shadow">
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="widget.shadow.open_sans" parent="widget.shadow">
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="widget.shadow.montserrat" parent="widget.shadow">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

</resources>